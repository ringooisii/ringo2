<div class="container">
	<div class="row">
    	<div class="main col-md-offset-3 col-md-6">
      		<div class="panel panel-default">
      			<div class="panel-heading">配達先情報登録フォーム</div>
      			<div class="panel-body">
      				<%= form_for @shipping do |f| %>
						<p>
							<%= f.label :お名前　%>
							<%= f.text_field :shipping_name, class: "form-control" %>
						</p>
						<p>
							<%= f.label :配達先郵便番号　%>
							<%= f.text_field :shipping_postcode, class: "form-control" %>
						</p>
						<p>
							<%= f.label :配達先住所　%>
							<%= f.text_field :shipping_address, class: "form-control" %>
						</p>
				</div>
			</div>
			<div class="actions row">
				<%= f.submit "注文確定画面へ", class: "btn btn-primary col-md-offset-3 col-md-6" %>
			</div>
				<br>
				<% end %>
		</div>
	</div>
</div>