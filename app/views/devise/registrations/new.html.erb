<div class="user-new">
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

　<div class="field">
    <%= f.label :名前 %><br>
    <%= f.text_field :first_name,  autofocus: true, placeholder:"姓" %> <%= f.text_field :last_name,  autofocus: true, placeholder:"名前" %>
  </div>


  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.text_field :first_name_kana, autofocus: true, placeholder:"セイ" %>
     <%= f.text_field :last_name_kana, autofocus: true, placeholder:"ナマエ" %>
  </div>

　
　<div class="field"> 
    <%= f.label :郵便番号 %><br>
    <%= f.text_field :postcode, autofocus: true, placeholder:"郵便番号" %>
  </div>


　<div class="field"> 
    <%= f.label :住所 %><br>
    <%= f.text_field :address, autofocus: true, placeholder:"住所" %>
  </div>

　<div class="field"> 
    <%= f.label :電話番号 %><br>
    <%= f.text_field :phone_number, autofocus: true, placeholder:"電話番号" %>
  </div>


　<div class="field"> 
    <%= f.label :メールアドレス %><br>
    <%= f.text_field :email, autofocus: true, placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :パスワード%><br>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上入力" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"6文字以上入力" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" ,class: 'btn btn-success' %>
  </div>
<% end %>
</div>
