<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title sign_up_box_text">新規登録</h2>
        </div>
        <div class="panel-body sign_up_box">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <%= render "devise/shared/error_messages", resource: resource %>

          　<div class="field">
              <%= f.label :名前 %><br>
              <%= f.text_field :first_name,  autofocus: true, placeholder:"姓" %> <%= f.text_field :last_name,  autofocus: true, placeholder:"名前" %>
            </div>


            <div class="field">
              <%= f.label :フリガナ %><br />
              <%= f.text_field :first_name_kana, autofocus: true, placeholder:"セイ" %>
               <%= f.text_field :last_name_kana, autofocus: true, placeholder:"ナマエ" %>
            </div>

          　<div class="field">
              <%= f.label :郵便番号 %><br>
              <%= f.text_field :postcode, autofocus: true, placeholder:"郵便番号" %>
            </div>


          　<div class="field">
              <%= f.label :住所 %><br>
              <%= f.text_field :address, autofocus: true, placeholder:"住所" %>
            </div>

          　<div class="field">
              <%= f.label :電話番号 %><br>
              <%= f.text_field :phone_number, autofocus: true, placeholder:"電話番号" %>
            </div>

          　<div class="field">
              <%= f.label :メールアドレス %><br>
              <%= f.text_field :email, autofocus: true, placeholder:"メールアドレス" %>
            </div>

            <div class="field">
              <%= f.label :パスワード%><br>
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上入力" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"6文字以上入力" %>
            </div>

            <div class="actions sign_up_box_btn">
              <%= f.submit "登録", class: 'btn btn-success sign_up_box_icon' %>

              <%= link_to user_facebook_omniauth_authorize_path, class: "sign_up_box_icon" do %>
              <span><i class="fab fa-facebook-square"></i></span><span class="fb_text"> Sign up with Facebook</span>
              <% end %>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>