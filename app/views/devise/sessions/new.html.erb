<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 sign-in-box">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">ログイン</h2>
        </div>
        <div class="panel-body">

          <div class="sign-in-box_main">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
               <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :メールアドレス %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
              </div>

              <div class="field">
                <%= f.label :パスワード %><br />
                <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード" %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "ログイン",class: 'btn btn-primary'%>
              <%= render "devise/shared/links" %>
            </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>