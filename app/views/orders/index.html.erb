<h1>注文確認</h1>

<table class="table">
	<thead>
			<th>購入予定商品</th>
			<th>数量</th>
			<th>価格</th>
			<th>小計</th>
	</thead>
	<tbody>
		 <% current_user.carts.each do |cart| %>
		<tr>
			<td><%= cart.product.product_image_id %></td>
			<td><%= cart.quantity %></td>
			<td><%= cart.product.price %></td>
			<td><%= cart.product.price * cart.quantity %>  </td>
		</tr>
		<% end %>
	</tbody>
</table>
<table class="table">
  <thead>
    <%= form_for(@order) do |f| %>
      <% current_user.shippings.each do |shipping| %>
        <tr>
         <td><label><%= f.radio_button :user_id, shipping.id %><%= shipping.shipping_address %><%= shipping.shipping_name %></label><td>
        <tr>

      <% end %>
	  <%= f.submit "注文確定" %>
	<% end %>
  </thead>
</table>
