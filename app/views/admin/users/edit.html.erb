<div class="container admin_userbox">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

				<div class="panel panel-default">
					<div class="panel-heading">
						<h2 class="panel-title ">登録者情報 編集</h5>
					</div>
					<div class="panel-body">
						<%= form_for ([:admin,@user]) do |f| %>

				    	<div class="field">
					    	<%= f.label :名前, class: "admin_user_edit_title" %>
					      <%= f.text_field :last_name, class: "last_name" %>
					      <%= f.text_field :first_name, class: "first_name" %><br>

					    	<%= f.label :フリガナ, class: "admin_user_edit_title" %>
					      <%= f.text_field :first_name_kana, class: "first_name_kana" %>
					      <%= f.text_field :first_name_kana, class: "first_name_kana" %><br>

					    	<%= f.label :郵便番号, class: "admin_user_edit_title" %>
					      <%= f.text_field :postcode, class: "postcode" %><br>

					    	<%= f.label :住所, class: "admin_user_edit_title" %>
					      <%= f.text_field :address, class: "address" %><br>

					    	<%= f.label :メールアドレス, class: "admin_user_edit_title" %>
					      <%= f.email_field :email, class: "password" %><br>

					    	<%= f.label :パスワード, class: "admin_user_edit_title" %>
					      <%= f.password_field :password, class: "password_confirm" %><br>

					    	<div class="actions">
					        <%= f.submit "登録", class: "btn btn-default" %>
					    		<%= link_to '削除', admin_user_path(@user.id), method: :delete, class: "btn btn-default" %>
					    	</div>
					    	<div>
					    	</div>
							</div>
					  <% end %>

						<!-- <div class="panel-footer">
						</div> -->
					</div>
				</div>

		</div>
	</div>
</div>