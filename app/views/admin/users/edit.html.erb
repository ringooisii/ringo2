<div class="admin_product_image">
<div class="container admin_userbox">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2 class="panel-title text-center">登録者情報 編集</h2>
					</div>
					<div class="panel-body">
						<%= form_for ([:admin,@user]) do |f| %>

				    	<div class="field admin_user_edit_title">
					    	<%= f.label :名前 %>
					      <%= f.text_field :first_name, class: "first_name" %>
					      <%= f.text_field :last_name, class: "last_name" %><br>

					    	<%= f.label :フリガナ %>
					      <%= f.text_field :first_name_kana, class: "first_name_kana" %>
					      <%= f.text_field :last_name_kana, class: "first_name_kana" %><br>

					    	<%= f.label :郵便番号 %>
					      <%= f.text_field :postcode, class: "postcode" %><br>

					    	<%= f.label :住所 %>
					      <%= f.text_field :address, class: "address" %><br>

					    	<%= f.label :メールアドレス %>
					      <%= f.email_field :email, class: "email" %><br>

					    	<%= f.label :パスワード %>
					      <%= f.password_field :password, class: "password" %><br>

					    	<%= f.label :パスワード確認 %>
					      <%= f.password_field :password_confirmation, class: "password_confirmation" %>

					    	<div class="actions text-center">
					        <%= f.submit "登録", class: "btn btn-default" %>
					    		<%= link_to '削除', admin_user_path(@user.id), method: :delete, class: "btn btn-default" %>
					    	</div>
					    	<div>
					    	</div>
							</div>
					  <% end %>

						<!-- <div class="panel-footer">
						</div> -->
					</div>
				</div>

		</div>
	</div>
</div>
</div>