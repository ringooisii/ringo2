<div class="container">
		<div class=
	<div class="row">
		<div class="main col-md-offset-2 col-md-8">
		<h1>登録商品一覧画面</h1>
		<table class="table">
			<thead>
			<tr>
				<th>商品ID</th>
				<th>サムネイル</th>
				<th>タイトル</th>
				<th>在庫</th>
				<th>価格</th>
				<th></th>
				<th></th>
			</tr>
			</thead>
			<% @product.each do |product| %>
			<tbody>
			<tr>
				<th><%= product.id %></th>
				<td><%= attachment_image_tag(product, :product_image, fallback: "noimage.png",size: '100x100') %></td>
				<td><%= product.product_name %></td>
				<td><%= product.stock_quantity %></td>
				<td><%= product.genre %></td>
				<td>編集</td>
				<td>削除</td>
				<% end %>
			</tr>
			</tbody>
			</table>
		</div>
	</div>
</div>

