	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<h2>サイト内状況</h2>
				<div>
					<h3>売り上げ</h3>
					<div>10000000</div>
				</div>
				<div>
					<h3>登録者数</h3>
					<div>10000</div>
				</div>
			</div>
			<div class="col-md-9">
				<h2>注文一覧</h2>
				<table class="table">
					<thead>
						<tr>
							<th>注文番号</th>
							<th>配送状況</th>
							<th>配送先</th>
							<th>購入</th>
							<th>注文詳細</th>
							<th>購入日時</th>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
						<tr>
							<td><%= link_to order.id, admin_oder_path(order.id) %></td>
							<td><%= order.order_status %></td>
							<td><%= order.order_address %></td>
							<td><%= order.user_id.name %></td>
							<td>data</td>
							<td><%= order.created_at %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>