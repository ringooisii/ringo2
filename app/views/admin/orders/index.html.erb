	<div class="container">
		<div class="row">
			<div class="col-md-3 panel panel-default">
					<h2  class="text-left">サイト内状況</h2>
					<div>
						<h3 class="text-left">売り上げ</h3>
						<p class="admin_sitestatus_text">10000000</p> <!-- まだ -->
					</div>
					<div>
						<h3 class="text-left">登録者数</h3>
						<p class="admin_sitestatus_text"><%= @users %></p>
					</div>
				</div>
			<div class="col-md-9">
				<h2 class="text-left">注文一覧</h2>
				<table class="table">
					<thead>
						<tr>
							<th>注文番号</th>
							<th>配送状況</th>
							<th>配送先</th>
							<th>購入者</th>
							<th>注文詳細</th>
							<th>購入日時</th>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
						<tr>
							<td><%= link_to order.id, admin_order_path(order.id) %></td>
							<td><%= order.order_status %></td>
							<td><%= order.order_address %></td>
							<td><%= order.order_name %></td>
							<td>
								<% order.order_products.each do |p| %>
									<%= p.product_id.product_name %>
								<% end %>
							</td>
							<td><%= order.created_at %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>