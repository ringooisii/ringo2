<!DOCTYPE html>
<html>
  <head>
    <title>Ringo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path do %>
        <%= image_tag "logo.png" %>
      <% end %>
    </div>

    <% if user_signed_in? %>
      <!-- ユーザーがログインしていない時 -->
      <div class="collapse navbar-collapse navbar-right" id="navbarEexample1">
        <ul class="nav navbar-nav">
          <li><%= link_to '新規会員登録', new_user_registration_path %></li>
          <li><%= link_to 'ログイン', new_user_session_path %></li>
          <li>ゲスト様</li>
        </ul>
      </div>

    <% elsif user_signed_in? && current_user.id == 1 %>
      <!-- 管理者がログインしていない時 -->
      <p class="navbar-text">管理者画面</p>
      <div class="collapse navbar-collapse navbar-right" id="navbarEexample">
        <ul class="nav navbar-nav">
          <li><%= link_to '登録者 一覧', admin_users_path %></li>
          <li><%= link_to '登録商品 一覧', admin_products_path %></li>
        </ul>
      </div>

    <% else %>
      <!-- ユーザーがログインしている時 -->
      <div class="collapse navbar-collapse navbar-right" id="navbarEexample1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'カート', carts_path %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path , method: :delete %></li>
          <li><%= link_to 'ユーザー名', user_path %></li>
        </ul>
      </div>

    <% end %>

  </div>
  </nav>

  <%= yield %>

  <footer class="footer">
    <div class="container">
      <p class="text-muted">©︎林檎team</p>
    </div>
  </footer>

  </body>
</html>
