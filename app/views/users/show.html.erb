<div class="container">
	<div class="row">
	<div class="col-xs-4">
		<div class="panel panel-default user_show_profile">
			<table class="table">
				<tr class="profile_categorys">
					<th>名前</th>
					<td><%= @user.first_name %><%= @user.last_name %>
						<%= @user.first_name_kana %><%= @user.last_name_kana %></td>
				</tr>
				<tr>
					<th>郵便番号</th>
					<td><%= @user.postcode %></td>
				</tr>
				<tr>
					<th>住所</th>
					<td><%= @user.address %></td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td><%= @user.email %></td>
						</tr>
			</table>
			<div class="profile_btn">
				<%= link_to "編集",edit_user_path, class: "btn btn-default center-block" %><br>
				<%= link_to "退会はこちらから",user_path, method: :delete,"data-confirm" => "本当に退会しますか？", class: "btn btn-danger center-block" %>
			</div>
		</div>
	</div>
	<div class="col-md-8">
		<div class="user_order">
			<h2>注文中の商品</h2>
			<table class="table">
				<thead>
					<tr>
						<th>注文id</th>
						<th>商品画像</th>
						<th>商品名</th>
						<th>数量</th>
						<th>価格</th>
						<th>小計</th>
						<th>発送状況</th>
					</tr>
				</thead>


				<tbody>
					<!-- ログインしているuserの商品情報を表示 -->
					<% current_user.orders.each do |order| %>
					<% if order.order_status == "未発送" %>
						<!-- 　注文履歴の表示 -->
						<% order.order_products.each do |order_product|%>
							<tr>
								<td><%= attachment_image_tag(order_product.product, :product_image, fallback: "noimage.png",size: '80x80') %></td>
								<td><%= order_product.order_name %></td>
								<td><%= order_product.order_quantity %></td>
								<td><%= order_product.order_price %></td>
								<td><%= order_product.order_price * order_product.order_quantity %></td>
								<td><%= order.order_status %></td>
							</tr>
						<% end %>

					<% end %>
					<% end %>
				</tbody>

			</table>
		</div>

		<div class="user_order">
			<h2>注文履歴</h2>
			<table class="table">
				<thead>
					<tr>
						<th>商品画像</th>
						<th>商品名</th>
						<th>数量</th>
						<th>価格</th>
						<th>小計</th>
						<th>発送状況<br>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<!-- ログインしているuserの商品情報を表示 -->
					<% current_user.orders.each do |order| %>
					<% if order.order_status != "未発送" %>
						<!-- 　注文履歴の表示 -->
						<% order.order_products.each do |order_product|%>
							<tr>
									<td><%= attachment_image_tag(order_product.product, :product_image, fallback: "noimage.png",size: '100x100') %></td>
									<td><%= order_product.order_name %></td>
									<td><%= order_product.order_quantity %></td>
									<td><%= order_product.order_price %></td>
									<td><%= order_product.order_price * order_product.order_quantity %></td>
									<td><%= order.order_status %></td>
							</tr>
						<% end %>
					<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	</div>
</div>
